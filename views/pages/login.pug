extends ../templates/base 

block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form#login-form.form.form--login
                .form__group
                label.form__label(for='email') Email address
                input#email.form__input(type='email', placeholder='you@example.com', autocomplete='on', required)
                .form__group.ma-bt-md
                label.form__label(for='password') Password
                input#password.form__input(type='password', placeholder='••••••••', autocomplete='on', required, minlength='6')
                .form__group
                button.btn.btn--green(type='submit') Login